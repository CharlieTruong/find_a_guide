<!DOCTYPE html>
<html>
<head>
  <title>City-Bird</title>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,600|Dosis:400,800" rel="stylesheet" type="text/css" />
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= include_gon %>
  
  <%= csrf_meta_tags %>

  <%= favicon_link_tag %>

</head>
<body>

<%= render 'shared/navbar' unless request.fullpath == "/" %>
<div id="content">
  <%= yield %>
</div>

<script>  //dropdown menu jquery here to avoid turbolinks

  // SITE-WIDE DROPDOWN
  $("#nav_profile_pic").on('click',function(){
    $("#dropdown").toggleClass('hide');
  });

  $(document).on('click',function(e){
    if(e.target.id !== "nav_profile_pic"){
      $("#dropdown").addClass('hide');
    }
    if(e.target.id !== 'pac-input-search'){
      $("#pac-input-search").width(150);
    }
  });

  $("#pac-input-search").on('click',function(){
    $("#pac-input-search").width(286);
  });



  $("#search_icon").on('click',function(){
    $("#search_icon").addClass('hide');
    $(".nav_search_input").removeClass('hide').focus();
  })
</script>

</body>
</html>
