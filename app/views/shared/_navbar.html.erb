<nav>
  <div id="nav_container">
    <%= link_to 'LOGO', root_path, :id => 'nav_logo' %>
    <% if request.fullpath != root_path %>
      <span id="nav_search">
        <%= text_field_tag 'search', nil, :placeholder => 'Search' %>
      </span>
    <% end %>
    <span id="right_hand_navbar">
      <% if current_user %>
        <% if current_user.is_ambassador %>
          <%= link_to new_user_tour_path(current_user.id), data: {no_turbolink: true} do %><span id="user_manage_tour_icon"><%= image_tag 'ambassador.png', :class => 'navbar_icon' %></span><% end %>
        <% end %>
        <%= link_to dashboard_path do %><span id="user_dashboard_icon"><%= image_tag 'dashboard.png', :class => 'navbar_icon' %></span><% end %>
        <div id="nav_image_container">
          <span id="nav_profile_pic" style="background-image:url('<%= current_user.profile_pic %>')"></span>
        </div>
      <% else %>
        <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
      <% end %>
    </span>
  </div>
</nav>

<div id="dropdown" class="hide">
  <ul>
    <% if session[:user_id] %>
      <%= link_to edit_user_path(current_user) do %><li>Account Settings</li><% end %>
      <%= link_to signout_path, id: "sign_out" do %><li>Logout</li><% end %>
    <% end %>
  </ul>

</div>
