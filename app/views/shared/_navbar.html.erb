<nav>
  <div id="nav_container">
    <%= link_to 'Find A Guide', root_path, :id => 'logo_nav' %>

    <%= form_tag search_path :id => 'navbar_search' do %>
      <%= text_field_tag 'search', nil, :placeholder => 'Search' %>
    <% end %>

    <% if current_user %>
      <span id="right_hand_navbar">
      <% if @user.is_ambassador %>
        <%= link_to ambassadors_path do %><span id="user_ambassador_icon"></span><% end %>
      <% end %>
      <%= link_to trips_path do %><span id="user_manage_trips_icon"></span><% end %>
      <%= link_to tours_path do %><span id="user_account_settings_icon"></span><% end %>
      </span>
    <% else %>
      <span id="right_hand_navbar">
        <%= link_to 'Login' create_authentication_path %>
        <%= link_to 'Sign Up' create_authentication_path %>
        <%= button_to 'Give Tours!' new_ambassador_path %>`
      </span>
    <% end %>
  </div>
