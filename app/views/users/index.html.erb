<div id="search_results_map"></div>
<div id="search_results_content">
  <div id="refine_search">
    <% @specialties.each do |s| %>
      <% if s.is_available? %>
        <%= check_box_tag s.specialty, s.specialty, false, class: 'refine_specialty' %>
      <% else %>
        <%= check_box_tag s.specialty, class: 'refine_specialty', disabled: true %>
      <% end %>
      <%= s.specialty %>
    <% end %>
    <% options_for_select(@languages) %>
  </div>
  <div id="search_results_list">
    <% @tours.each do |t| %>
      <%= link_to tour_path(t) do %>
        <div class="ambassador_tour_card">
          <%= image_tag(t.ambassador.profile_pic) %>
          <span class="ambassador_name_card"><%= t.ambassador.first_name %></span>
          <span class="ambassador_tag_line_card"><%= t.ambassador.first_name %></span>
          <span class="ambassador_rating_card"><%= t.ambassador.rating %></span>
          <span class="tour_description_card"><%= t.description.truncate(30) %></span>
        </div>
      <% end %>
    <% end %>
  </div>
  <div id="home_marketing">
    
  </div>
  
</div>