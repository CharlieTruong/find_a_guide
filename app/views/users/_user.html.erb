<div id="search_results_list">
  <% @tours.each do |t| %>
    <%= link_to user_tour_path(t.ambassador,t) do %>
      <div class="ambassador_tour_card">
        <%= image_tag(t.ambassador.profile_pic(t.ambassador.uid)) %>
        <span class="ambassador_name_card"><%= t.ambassador.first_name %></span>
        <span class="ambassador_tag_line_card"><%= t.ambassador.last_name %></span>
        <span class="ambassador_rating_card"><%= t.ambassador.rating %></span>
        <span class="tour_description_card"><%= t.description.truncate(30) %></span>
      </div>
    <% end %>
  <% end %>
</div>