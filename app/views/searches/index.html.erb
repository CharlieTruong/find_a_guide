<div id="search_results_map"></div>
<div id="search_results_content">
  <div id="refine_search">
    <% @specialties.each do |s| %>
      <% if s.is_available? %>
        <%= check_box_tag s.name class: 'refine_specialty' %>
      <% else %>
        <%= check_box_tag s.name class: 'refine_specialty' disabled: true %>
      <% end %>
    <% end %>
    <% options_for_select(@languages) %>
  </div>
  <div id="search_results_list">
    <% @tours.each do |t| %>
      <%= link_to tour_path(t) do %>
        <div class="ambassador_tour">
          <%= image_tag(t.ambassador.profile_pic) %>
          <span class="ambassador_name"><%= t.ambassador.first_name %></span>
          <span class="ambassador_tag_line"><%= t.ambassador.first_name %></span>
          <span class="ambassador_rating"></span>
          <span class="tour_description"><%= t.description.truncate(30) %></span>
        </div>
      <% end %>
    <% end %>
  </div>
  
</div>